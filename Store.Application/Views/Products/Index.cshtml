@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@foreach (var item in Model)
{
    <p>

        @item.Name (@item.CategoryName) - @item.Price
        
    </p>
}


<table class="table">
    <thead>
        <tr>
           
            <th scope="col">nazwa</th>
            <th scope="col">kategoria</th>
            <th scope="col">Cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@item.Price</td>
            </tr>
            }
        </tbody>
</table>